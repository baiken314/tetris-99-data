<!DOCTYPE html>
<html>
    <head>
        <%- include ("../views/partials/meta.ejs") %>
    </head>
    <body>
        <%- include ("../views/partials/header.ejs") %>
        <main>
            <%- include ("../views/partials/nav_bar.ejs") %>
            <form action="/users/create" method="post" class="well">
                <h1>Register New User</h1>
                <% if (message) { %>
                    <p class="red"><%= message %></p>
                <% } %>
                <label for="name">Name: </label>
                <input id="name" type="text" name="name" maxlength="16" minlength="5" required>
                <label for="password">Password: </label>
                <input id="password" type="password" name="password" minlength="5" required>
                <br>
                <button type="submit" class="half center">Register</button>
                <br>
            </form>
        </main>
    </body>
</html>